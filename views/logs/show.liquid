{% layout 'layout.liquid' %}
{% block content %}
<div class="container-md">
    <article>
        <h2>
            {{ log.title }} -
            {%- comment -%} {% if example.ready %}
            Ready
            {% else %}
            Not Ready
            {%endif%} {%- endcomment -%}
        </h2>
        {%- comment -%} <h3>Amount: {{ example.amount }}</h3>
        <h6>Body: {{ example.body }}</h6> {%- endcomment -%}
        {% if log.owner == userId %}
        <div class="btn-group">

            <a href="/logs/{{ log.id }}/edit" class="btn btn-primary">Edit</a>
            <form action="/logs/{{ log.id }}?_method=DELETE" method="POST">
                <input type="submit" value="Delete" class="btn btn-danger">
            </form>
        </div>
        {% endif %}
    </article>
</div>
{% endblock %}